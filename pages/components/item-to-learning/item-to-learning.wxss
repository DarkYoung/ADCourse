.item-container {
    position: relative;
    width: 100%;
    height: 300rpx;
    margin: 25rpx auto;
    border-radius: 25rpx;
    overflow: hidden;
}

.item-body {
    position: relative;
    height: 80%;
}

.item-body image {
    display: block;
    max-width: 100%;
    height: 100%;
    margin: 0 auto;
}

.item-body.item-completed::after, .item-body.item-learning::after {
    position: absolute;
    right: 0;
    top: 25rpx;
}

.item-body.item-completed::after {
    content: '已完成';
}

.item-body.item-learning::after {
    content: '学习中';
}

.item-footer {
    position: relative;
    height: 20%;
    padding: 25rpx;
}

.item-footer::after {
    position: absolute;
    right: 25rpx;
    top: 25rpx;
    content: '>';
}
