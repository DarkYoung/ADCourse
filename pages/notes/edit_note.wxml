<!--pages/notes/edit_note.wxml-->
<view class='container'>
    <cu-custom bgColor="bg-theme" isBack="{{true}}">
        <view slot="content" class="text-bold text-xl">编辑笔记</view>
    </cu-custom>
  <view class='panel card-shadow' data-url="{{url}}">
      <form bindsubmit='submit'>
        <view class='text_content'>
          <textarea name="content" maxlength='700' 
          value="{{content}}" bindinput='changeContent' placeholder='我的肝真好！'></textarea>
        </view>
        <view class='submit_button'>
          <text  bindtap='submit'>提交</text>
        </view>
      </form>
  </view>
</view>
