<view class='container'>
    <cu-custom bgColor="bg-white" isBack="{{true}}">
        <view slot="backText">返回</view>
        <view slot="content">学习进度</view>
    </cu-custom>
    <view id='timeline-container' class='page-body'>
        <view class='cu-timeline' wx:for="{{chapterList}}" wx:key="index" wx:for-item="chapter">
            <view class='cu-time'>{{chapter.name}}</view>
            <view class='cu-item cuIcon-activity  {{section.id==latestSectionId?"text-green":"text-yellow light"}}' wx:for="{{chapter.sectionList}}" wx:key="index" wx:for-item="section" bindtap='navigationTo' data-sectionId='{{section.id}}'>
                <view class="content {{section.id==latestSectionId?'bg-green shadow-blur':''}}">
                    <view>
                        <text>【{{section.name}}】</text> {{section.summary}}
                    </view>
                </view>
            </view>
        </view>
        <view class='cu-timeline'>
            <view class="cu-item cur cuIcon-noticefill">
                <view class="content">
                    学完上一小节即可加载新内容。
                </view>
            </view>
        </view>
    </view>
</view>